<!-- Modal -->
<div class="modal fade" id="dinarcoin-info-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" ng-controller="DinarcoinController">
    <div class="modal-dialog" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Dinarcoin</h4>


            </div>
            <!--Body-->
            <div class="modal-body">
                <!-- Nav tabs -->
                <ul class="nav dinarcoin nav-tabs">
                    <li id="DNC-receive-tab" class="active">
                        <a href="#DNC-receive" data-toggle="tab">Receive</a>
                    </li>
                    <li id="DNC-send-tab">
                        <a href="#DNC-send" data-toggle="tab">Send</a>
                    </li>
                    <li id="DNC-mint-tab">
                        <a href="#DNC-mint" data-toggle="tab">Mint</a>
                    </li>
                    <li id="DNC-burn-tab">
                        <a href="#DNC-burn" data-toggle="tab">Burn</a>
                    </li>
                    <li><a href="#DNC-transactions" data-toggle="tab">Transactions</a>
                    </li>
                </ul>

                <div class="dinarcoin tab-content ">
                    <div class="tab-pane active" id="DNC-receive">
                        <br>
                        <h3>Your Dinarcoin Account Information</h3>
                        <br>
                        <p>Address:</p>
                        <h4>{[{DNCaddress}]}</h4>
                        <img src="https://chart.googleapis.com/chart?chs=350x350&cht=qr&chl={[{DNCaddress}]}" alt="">
                    </div>
                    <div class="tab-pane" id="DNC-send">
                        <br>
                        <h3>Send Dinarcoin to an Address</h3>
                        <div class="send-error-message">
                            <br>
                            <h4 class='text-danger font-weight-bold'>{[{sendErrorMessage}]}</h4>
                            <br>
                        </div>
                        <div style="width: 60%; display: inline-block; margin-right: 35px;">
                            <input type="text" id="DNC-send-address" class="form-control validate" placeholder="Receiving Address" ng-model="sendAddress">
                        </div>
                        <div style="width: 20%; display: inline-block;">
                            <input type="number" id="DNC-send-amount" class="form-control validate" placeholder="Amount" ng-model="sendAmount">
                        </div>
                        <br>
                        <h4>Sending {[{sendAmount || 0 | number:2}]} DNC ( {[{sendAmount / DNCinUSD || 0 | number:2}]} USD ) </h4>
                        <br>
                        <input class="btn btn-primary btn-lg" type="submit" value="Send" ng-click="sendDinarcoin()">

                    </div>
                    <div class="tab-pane" id="DNC-mint">
                        <br>
                        <h3>Mint Dinarcoin</h3>
                        <p>Please enter amount to mint in BTC/ETH</p>
                        <div class="mint-error-message">
                            <br>
                            <h4 class='text-danger font-weight-bold'>{[{mintErrorMessage}]}</h4>
                            <br>
                        </div>
                        <div style="width: 20%; display: inline-block; margin-right: 35px;">
                            <input type="number" id="mint-amount" class="form-control validate" placeholder="Amount" ng-model="mintAmount">

                        </div>
                        <div style="width: 60%; display: inline-block;">
                            <select name="mint-currency" id="mint-currency" ng-model="mintCurrency">
                                <option value="BTC">BTC (Bitcoin)</option>
                                <option value="ETH">ETH (Ethereum)</option>
                            </select>
                        </div>
                        <br>
                        <div ng-if="mintCurrency == 'BTC' || mintCurrency == 'ETH'">
                            <h4>Minting {[{mintAmount * (mintCurrency == "BTC" ? BTCinUSD/DNCaskinUSD: ETHinUSD/DNCaskinUSD) || 0 }]} DNC (  {[{mintAmount || 0 }]} {[{mintCurrency}]} ) </h4>
                            <br>
                        </div>
                        <input class="btn btn-primary btn-lg" type="submit" value="Send" ng-click="mintDinarcoin()">
                    </div>
                    <div class="tab-pane" id="DNC-burn">
                        <br>
                        <h3>Burn Dinarcoin</h3>
                        <p>Please enter amount to burn in BTC/ETH</p>
                        <div class="burn-error-message">
                            <br>
                            <h4 class='text-danger font-weight-bold'>{[{burnErrorMessage}]}</h4>
                            <br>
                        </div>
                        <div style="width: 20%; display: inline-block; margin-right: 35px;">
                            <input type="number" id="burn-amount" class="form-control validate" placeholder="Amount" ng-model="burnAmount">
                        </div>
                        <div style="width: 60%; display: inline-block;">
                            <select name="burn-currency" id="burn-currency" ng-model="burnCurrency">
                                <option value="BTC">BTC (Bitcoin)</option>
                                <option value="ETH">ETH (Ethereum)</option>
                            </select>

                        </div>
                        <br>
                        <div ng-if="burnCurrency == 'BTC' || burnCurrency == 'ETH'">
                            <h4>Burning {[{burnAmount * (burnCurrency == "BTC" ? BTCinUSD/DNCbidinUSD : ETHinUSD/DNCbidinUSD) || 0}]} DNC ( {[{burnAmount || 0 }]} {[{burnCurrency}]} ) </h4>
                            <br>
                        </div>
                        <input class="btn btn-primary btn-lg" type="submit" value="Send" ng-click="burnDinarcoin()">
                    </div>
                    <div class="tab-pane" id="DNC-transactions">
                        <br>
                        <h3>Transactions</h3>
                        <br>
                        <div class="table-responsive">
                            <table class="table table-striped" style="text-align: left">
                                <tr>
                                    <th>Date</th>
                                    <th>Txn Hash</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>from</th>
                                    <th>to</th>
                                </tr>
                                <tr ng-repeat="txn in transactions | filter: dinarcoinFilter ">
                                    <td> {[{txn.requestedAt | date:'dd-MM-yy HH:mm'}]} </td>
                                    <td> {[{txn.hash}]} </td>
                                    <td> {[{txn.typeOf}]} </td>
                                    <td> {[{(txn.metadata.fromAmount > txn.metadata.toAmount ? txn.metadata.fromAmount : txn.metadata.toAmount)}]} </td>
                                    <td> {[{txn.metadata.fromAddress}]} </td>
                                    <td> {[{txn.metadata.toAddress}]} </td>

                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

            <!--&lt;!&ndash;Footer&ndash;&gt;-->
            <!--<div class="modal-footer">-->
                <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
                <!--<button type="button" class="btn btn-primary">Save changes</button>-->
            <!--</div>-->
        </div>
        <!--/.Content-->
    </div>
</div>
<!-- /.Live preview-->

<style>
    .tab-content {
        text-align: center;
    }
</style>