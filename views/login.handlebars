{{> navbar}}
<div class="container-fluid" ng-controller="LoginController">
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="col-lg-4 col-md-6 col-md-offset-4 card login-form">
        <h3>This is the Login form</h3>
        <br>
        <form class="col-md-10 col-md-offset-1" action="">
            <div class="md-form form-group">
                <i class="fa fa-envelope prefix"></i>
                <input type="email" id="form-email-input" class="form-control validate" placeholder="Your Email Address" ng-model="email">
                <!--<label for="form-email-input" data-error="wrong" data-success="right" class="">Example label</label>-->
            </div>
            <div class="md-form form-group">
                <i class="fa fa-lock prefix"></i>
                <input type="password" id="form-password-input" class="form-control" placeholder="Your Password" ng-model="pwd">
                <!--<label for="form-password-input" data-error="wrong" data-success="right" class="">Your Password</label>-->
            </div>
            <div class="login-message">
                <h4 class='text-danger font-weight-bold'>{[{errorMessage}]} </h4>
                <br>
            </div>
            <div class="md-form">
                <input class="btn btn-primary btn-lg" type="submit" value="Login" ng-click="login()">
                <a class="btn btn-primary btn-lg" href="">Register</a>
            </div>
        </form>
        <a href="">Forgot Password?</a>

    </div>
</div>

<style>
    .login-form {
        text-align: center;
        padding: 30px;
    }
    .login-form>form>.form-group {
        text-align: left;
    }
</style>
