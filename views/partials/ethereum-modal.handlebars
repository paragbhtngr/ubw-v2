            </div>
            <!--Body-->
            <div class="modal-body">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a  href="#1" data-toggle="tab">Receive</a>
                    </li>
                    <li><a href="#2" data-toggle="tab">Send</a>
                    </li>
                    <li><a href="#3" data-toggle="tab">Transcations</a>
